<Page x:Class="TravelAgency.Zastavka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zastavka">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Background="#ff9370db" Panel.ZIndex="-2"/>
        <TextBlock Text="Страница Туристического агентства" FontSize="22" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Вид отдыха" FontSize="22" Width="150" Height="50" Click="VidBTN" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"  Grid.Row="1"></Button>
        <Button Content="Путевки" FontSize="22" Width="150" Height="50" Click="PytBTN" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Margin="10"></Button>
       



    </Grid>
</Page>
