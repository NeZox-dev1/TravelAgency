<Window x:Class="TravelAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency"
        mc:Ignorable="d"
        Title="Travel Agency" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame" Grid.ColumnSpan="2"></Frame>
        <Grid Grid.Row="0" Background="#ff9370db" Panel.ZIndex="-2" Grid.ColumnSpan="2"></Grid>
        <Grid Grid.Row="1" Background="#ff9370db" Panel.ZIndex="-2" Grid.ColumnSpan="2" Margin="0,294,0,0" Grid.RowSpan="2"></Grid>
        <TextBlock Text="Travel Agency" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="254,0,0,0" Height="30" Width="134"></TextBlock>
        <Button Content="Назад"  Click="BackBTN" Name="BBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Height="50" FontSize="22" Margin="10,0,0,0"/>
    </Grid>
</Window>
